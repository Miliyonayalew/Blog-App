
<%@user.recent_three_posts.each do |post|%>
  <%= link_to user_post_path(@user, post) do %> 
    <div class="flex flex-col border mt-5 mb-5 p-3 ">
      <h3 class="mt-2 mb-2"><%=post.title%> #<%=post.id%></h3>
      <div class="flex justify-between">
        <p class="mt-2 mb-2"><%=post.text%></p>
        <span>Comments: <%=post.comments_counter%> Likes: <%=post.likes_counter%></span>
      </div>
    </div>
  <%end%>
<%end%>