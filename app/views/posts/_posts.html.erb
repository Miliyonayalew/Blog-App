<% if current_user %>
      <h2 class="mt-3">Welcome <%= current_user.name %></h2>
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "mt-2 button button-gradient text-white bg-gray-500 border hover:text-gray-500 hover:border-gray-500 hover:bg-transparent", 'data-ripple-light': true, data: { turbo: false } %>
<% end %>
  <% user.each do |user| %>
    <%= link_to user_path(user) do%>
      <div class="flex mx-10 my-5 items-center justify-center card bg-white p-6 shadow-md rounded-lg ">
        <div class="mx-5">
          <img src="<%= user.photo %>" alt="img" class="h-40 w-50 rounded-full object-cover"/>
        </div>
        <div class="w-2/3 pl-4 flex justify-between">
          <h2 class="text-lg text-center font-medium"><%= user.name %></h2>
          <span class="text-sm items-end mt-12">Number of posts: <%=user.posts.count%></span>
        </div>
      </div>
    <%end%>
  <% end %>